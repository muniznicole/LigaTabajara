﻿@model IEnumerable<LigaTabajara.Models.Time>

@{
    ViewBag.Title = "Início";
}

<div class="min-h-screen bg-black text-white px-4 py-10">
    <div class="max-w-4xl mx-auto bg-gray-900 bg-opacity-90 backdrop-blur-sm border border-gray-800 rounded-xl shadow-2xl p-10">

        <h1 class="text-4xl font-bold text-center text-pink-400 mb-4">Liga Tabajara de Futebol</h1>

        <p class="text-lg text-center text-gray-300 leading-relaxed mb-6">
            Bem-vindo ao sistema oficial da Liga Tabajara. Aqui você pode cadastrar times, jogadores, acompanhar estatísticas
            e conferir a tabela completa do campeonato!
        </p>

        <div class="text-center text-xl font-semibold mb-6 text-yellow-400">
            Status da Liga: @ViewBag.LigaStatus
        </div>

        <div class="flex justify-center gap-6 mb-10">
            <a href="/Times" class="text-pink-400 hover:text-white font-semibold transition duration-300">Times</a>
            <a href="/Jogadors" class="text-pink-400 hover:text-white font-semibold transition duration-300">Jogadores</a>
            <a href="/ComissaoTecnicas" class="text-pink-400 hover:text-white font-semibold transition duration-300">Comissão Técnica</a>
            <a href="/Partidas" class="text-pink-400 hover:text-white font-semibold transition duration-300">Partidas</a>
            <a href="/Gols" class="text-pink-400 hover:text-white font-semibold transition duration-300">Gols</a>
        </div>

        <h2 class="text-2xl font-bold text-pink-300 mb-4 text-center">Times Cadastrados</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            @foreach (var time in Model)
            {
                <div class="bg-gray-800 border border-gray-700 p-4 rounded shadow text-left">
                    <h3 class="text-pink-400 text-xl font-bold mb-2">@time.Nome</h3>
                    <p class="text-gray-300">@time.Cidade - @time.Estado</p>

                    <p class="text-sm text-pink-200 font-semibold mt-3">Comissão Técnica:</p>
                    <ul class="text-gray-300 text-sm list-disc ml-6">
                        @foreach (var membro in time.ComissaoTecnica)
                        {
                            <li>@membro.Cargo - @membro.Nome</li>
                        }
                    </ul>

                    <p class="text-sm text-pink-200 font-semibold mt-3">Jogadores:</p>
                    <ul class="text-gray-300 text-sm list-disc ml-6 max-h-40 overflow-y-auto">
                        @foreach (var jogador in time.Jogadores)
                        {
                            <li>#@jogador.NumeroCamisa - @jogador.Nome (@jogador.Posicao)</li>
                        }
                    </ul>

                    <a href="/Times/Details/@time.TimeId" class="text-pink-400 hover:underline text-sm mt-4 inline-block">Ver Detalhes</a>
                </div>

            }
        </div>
    </div>
</div>