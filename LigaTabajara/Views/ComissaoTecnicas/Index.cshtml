@model IEnumerable<LigaTabajara.Models.ComissaoTecnica>

@{
    ViewBag.Title = "Comissão Técnica";
}

<h2 class="text-3xl font-bold text-pink-400 text-center mb-8">Lista da Comissão Técnica</h2>

<div class="flex justify-end mb-4">
    @Html.ActionLink("Cadastrar Novo Membro", "Create", null, new
    {
        @class = "no-underline bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-4 rounded-md transition duration-300"
    })
</div>

<div class="overflow-x-auto">
    <table class="min-w-full bg-gray-900 border border-gray-800 rounded-lg shadow">
        <thead>
            <tr class="bg-gray-800 text-pink-300 text-center">
                <th class="py-3 px-4">Nome</th>
                <th class="py-3 px-4">Cargo</th>
                <th class="py-3 px-4">Data de Nascimento</th>
                <th class="py-3 px-4">Time</th>
                <th class="py-3 px-4">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var membro in Model)
            {
                <tr class="border-t border-gray-700 text-center hover:bg-gray-800">
                    <td class="py-2 px-4">@membro.Nome</td>
                    <td class="py-2 px-4">@membro.Cargo</td>
                    <td class="py-2 px-4">@membro.DataNascimento.ToString("dd/MM/yyyy")</td>
                    <td class="py-2 px-4">@(membro.Time != null ? membro.Time.Nome : "Sem time")</td>
                    <td class="py-2 px-4 flex justify-center gap-3">
                        @Html.ActionLink("✏️", "Edit", new { id = membro.ComissaoTecnicaId }, new
                        {
                            @class = "no-underline text-yellow-300 hover:text-yellow-400 text-lg",
                            title = "Editar"
                        })
                        @Html.ActionLink("🕵️", "Details", new { id = membro.ComissaoTecnicaId }, new
                        {
                            @class = "no-underline text-blue-300 hover:text-blue-400 text-lg",
                            title = "Detalhes"
                        })
                        @Html.ActionLink("❌", "Delete", new { id = membro.ComissaoTecnicaId }, new
                        {
                            @class = "no-underline text-red-400 hover:text-red-500 text-lg",
                            title = "Excluir"
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
