@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Cadastrar Time";
}

<div class="min-h-screen bg-black text-white flex items-center justify-center px-4">
    <div class="w-full max-w-3xl bg-gray-900 border border-gray-800 rounded-xl shadow-xl p-8 space-y-6">

        <h1 class="text-3xl font-bold text-pink-400 text-center mb-4">Cadastrar Novo Time</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4" })

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Nome -->
                <div>
                    @Html.LabelFor(m => m.Nome, "Nome", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Cidade -->
                <div>
                    @Html.LabelFor(m => m.Cidade, "Cidade", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.Cidade, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Estado -->
                <div>
                    @Html.LabelFor(m => m.Estado, "Estado", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.Estado, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Ano Fundação -->
                <div>
                    @Html.LabelFor(m => m.AnoFundacao, "Ano de Fundação", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.AnoFundacao, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.AnoFundacao, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Estádio -->
                <div>
                    @Html.LabelFor(m => m.Estadio, "Estádio", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.Estadio, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.Estadio, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Capacidade -->
                <div>
                    @Html.LabelFor(m => m.CapacidadeEstadio, "Capacidade do Estádio", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.CapacidadeEstadio, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.CapacidadeEstadio, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Cor Uniforme Primária -->
                <div>
                    @Html.LabelFor(m => m.CorUniformePrimaria, "Cor Primária do Uniforme", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.CorUniformePrimaria, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.CorUniformePrimaria, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Cor Uniforme Secundária -->
                <div>
                    @Html.LabelFor(m => m.CorUniformeSecundaria, "Cor Secundária do Uniforme", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    @Html.TextBoxFor(m => m.CorUniformeSecundaria, new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
                    @Html.ValidationMessageFor(m => m.CorUniformeSecundaria, "", new { @class = "text-red-400 text-sm" })
                </div>

                <!-- Status -->
                <div>
                    @Html.LabelFor(m => m.Status, "Status", htmlAttributes: new { @class = "block text-sm font-medium text-pink-300" })
                    <div class="flex items-center gap-2 mt-2">
                        @Html.CheckBoxFor(m => m.Status, new { @class = "form-checkbox h-5 w-5 text-pink-500" })
                        <span class="text-gray-300 text-sm">Está apto para participar da liga?</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-red-400 text-sm" })
                </div>
            </div>

            <!-- Botões -->
            <div class="mt-8 flex justify-between">
                <a href="@Url.Action("Index")" class="text-gray-300 hover:text-pink-400 no-underline">← Voltar</a>
                <input type="submit" value="Cadastrar" class="bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-6 rounded transition duration-300" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
