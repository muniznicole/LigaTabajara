<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Liga Tabajara</title>

    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-black text-white min-h-screen flex flex-col">

    <!-- NAVBAR -->
    <nav class="bg-gray-900 border-b border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">

                <!-- Logo + Nome -->
                <div class="flex items-center space-x-2">
                    <span class="text-2xl">⚽</span>
                    <a href="@Url.Action("Index", "Home")" class="text-pink-400 text-xl font-bold hover:text-pink-300 transition duration-300 no-underline">
                        Liga Tabajara
                    </a>
                </div>

                <!-- Links -->
                <div class="hidden md:flex space-x-6">
                    @Html.ActionLink("Página Inicial", "Index", "Home", null, new { @class = "text-gray-300 hover:text-pink-400 transition duration-200 no-underline" })
                    @Html.ActionLink("Sobre", "About", "Home", null, new { @class = "text-gray-300 hover:text-pink-400 transition duration-200 no-underline" })
                    @Html.ActionLink("Contato", "Contact", "Home", null, new { @class = "text-gray-300 hover:text-pink-400 transition duration-200 no-underline" })
                </div>
            </div>
        </div>
    </nav>

    <!-- CONTEÚDO -->
    <main class="flex-grow px-4 py-8">
        @RenderBody()
    </main>

    <!-- RODAPÉ -->
    <footer class="bg-gray-900 text-gray-400 text-center py-4 border-t border-gray-800">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por <span class="text-pink-400 font-semibold">Nicole Araujo Muniz</span></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
