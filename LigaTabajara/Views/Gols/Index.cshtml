@model IEnumerable<LigaTabajara.Models.Gol>

@{
    ViewBag.Title = "Gols";
}

<h2 class="text-3xl font-bold text-pink-400 text-center mb-8">Gols Registrados</h2>

<div class="flex justify-end mb-4">
    @Html.ActionLink("Registrar Novo Gol", "Create", null, new
    {
        @class = "no-underline bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-4 rounded-md transition duration-300"
    })
</div>

<div class="overflow-x-auto">
    <table class="min-w-full bg-gray-900 border border-gray-800 rounded-lg shadow">
        <thead>
            <tr class="bg-gray-800 text-pink-300 text-center">
                <th class="py-3 px-4">Jogador</th>
                <th class="py-3 px-4">Time</th>
                <th class="py-3 px-4">Partida</th>
                <th class="py-3 px-4">Minuto</th>
                <th class="py-3 px-4">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gol in Model)
            {
                <tr class="border-t border-gray-700 text-center hover:bg-gray-800">
                    <td class="py-2 px-4">@gol.Jogador?.Nome</td>
                    <td class="py-2 px-4">@gol.Jogador?.Time?.Nome</td>
                    <td class="py-2 px-4">@gol.Partida?.TimeCasa?.Nome x @gol.Partida?.TimeFora?.Nome</td>
                    <td class="py-2 px-4">@gol.Minuto'</td>
                    <td class="py-2 px-4 flex justify-center gap-3">
                        @Html.ActionLink("✏️", "Edit", new { id = gol.GolId }, new
                        {
                            @class = "no-underline text-yellow-300 hover:text-yellow-400 text-lg",
                            title = "Editar"
                        })
                        @Html.ActionLink("👀", "Details", new { id = gol.GolId }, new
                        {
                            @class = "no-underline text-blue-300 hover:text-blue-400 text-lg",
                            title = "Detalhes"
                        })
                        @Html.ActionLink("❌", "Delete", new { id = gol.GolId }, new
                        {
                            @class = "no-underline text-red-400 hover:text-red-500 text-lg",
                            title = "Excluir"
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
