@model LigaTabajara.Models.Partida

@{
    ViewBag.Title = "Editar Partida";
}

<div class="min-h-screen bg-black text-white flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-3xl bg-gray-900 border border-gray-800 rounded-xl shadow-xl p-8 space-y-6">

        <h1 class="text-3xl font-bold text-pink-400 text-center mb-4">Editar Partida</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.PartidaId)

            @Html.ValidationSummary(true, "", new { @class = "text-red-400 mb-4" })

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            @Html.LabelFor(m => m.TimeCasaId, "Time da Casa", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.DropDownList("TimeCasaId", null, "-- Selecione um time --", new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.TimeCasaId, "", new { @class = "text-red-400 text-sm" })
        </div>


        <div>
            @Html.LabelFor(m => m.TimeForaId, "Time Visitante", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.DropDownList("TimeForaId", null, "-- Selecione um time --", new { @class = "mt-1 w-full px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.TimeForaId, "", new { @class = "text-red-400 text-sm" })
        </div>

        <div>
            @Html.LabelFor(m => m.DataHora, "Data e Hora", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.TextBoxFor(m => m.DataHora, "{0:yyyy-MM-ddTHH:mm}", new { type = "datetime-local", @class = "w-full mt-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.DataHora, "", new { @class = "text-red-400 text-sm" })
        </div>

        <div>
            @Html.LabelFor(m => m.Estadio, "Estádio", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.TextBoxFor(m => m.Estadio, new { @class = "w-full mt-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.Estadio, "", new { @class = "text-red-400 text-sm" })
        </div>

        <div>
            @Html.LabelFor(m => m.PlacarTimeCasa, "Gols Time da Casa", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.TextBoxFor(m => m.PlacarTimeCasa, new { type = "number", @class = "w-full mt-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.PlacarTimeCasa, "", new { @class = "text-red-400 text-sm" })
        </div>

        <div>
            @Html.LabelFor(m => m.PlacarTimeFora, "Gols Time Visitante", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.TextBoxFor(m => m.PlacarTimeFora, new { type = "number", @class = "w-full mt-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.PlacarTimeFora, "", new { @class = "text-red-400 text-sm" })
        </div>

        <div>
            @Html.LabelFor(m => m.Rodada, "Rodada", new { @class = "block text-sm font-medium text-pink-300" })
            @Html.TextBoxFor(m => m.Rodada, new { type = "number", @class = "w-full mt-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded text-white" })
            @Html.ValidationMessageFor(m => m.Rodada, "", new { @class = "text-red-400 text-sm" })
        </div>
    </div>

            <div class="mt-8 flex justify-between">
                <a href="@Url.Action("Index")" class="text-gray-300 hover:text-pink-400 no-underline">← Voltar</a>
                <input type="submit" value="Salvar Alterações" class="bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-6 rounded transition duration-300" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
