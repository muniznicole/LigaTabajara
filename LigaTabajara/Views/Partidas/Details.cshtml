@model LigaTabajara.Models.Partida

@{
    ViewBag.Title = "Detalhes da Partida";
}

<div class="min-h-screen bg-black text-white flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-3xl bg-gray-900 border border-gray-800 rounded-xl shadow-2xl p-8 space-y-6">
        <h1 class="text-3xl font-bold text-pink-400 text-center mb-6">Detalhes da Partida</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-300 text-base">
            <div>
                <span class="font-semibold text-pink-300">Rodada:</span>
                <p>@Model.Rodada</p>
            </div>
            <div>
                <span class="font-semibold text-pink-300">Data e Hora:</span>
                <p>@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            <div>
                <span class="font-semibold text-pink-300">Time da Casa:</span>
                <p>@Model.TimeCasa?.Nome ?? "—"</p>
            </div>
            <div>
                <span class="font-semibold text-pink-300">Time Visitante:</span>
                <p>@Model.TimeFora?.Nome ?? "—"</p>
            </div>
            <div>
                <span class="font-semibold text-pink-300">Placar:</span>
                <p>@Model.PlacarTimeCasa x @Model.PlacarTimeFora</p>
            </div>
            <div>
                <span class="font-semibold text-pink-300">Estádio:</span>
                <p>@Model.Estadio</p>
            </div>
        </div>

        <div class="mt-8 flex justify-between">
            <a href="@Url.Action("Edit", new { id = Model.PartidaId })"
               class="bg-yellow-400 hover:bg-yellow-500 text-black font-semibold py-2 px-6 rounded transition duration-300 no-underline">
                ✏️ Editar
            </a>

            <a href="@Url.Action("Index")"
               class="text-pink-400 hover:text-pink-300 font-medium no-underline">
                ← Voltar para a Lista
            </a>
        </div>
    </div>
</div>
